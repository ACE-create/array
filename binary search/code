#include<iostream>
using namespace std;
int binary_search(int arr[],int a,int num);
int main()
{
    int a;
    cout<<"enter the size of an array";
    cin>>a;
    int arr[a];
    for(int i=0;i<a;i++)
    {
        cin>>arr[i];
    }
    for(int i=0;i<a;i++)
    {
        for(int j=i+1;j<a;j++)
        {
            if(arr[i]>arr[j])
            {
                int temp;
                temp=arr[i];
                arr[i]=arr[j];
                arr[j]=temp;
            }
        }
    }
    cout<<endl<<"array after sorting"<<endl;
    for(int i=0;i<a;i++)
    {
        cout<<arr[i];
    }
    int num;
    cout<<endl<<"enter number to search"<<endl;
    cin>>num;
    int index=binary_search(arr,a,num);
    cout<<index;
    
}
int binary_search(int arr[],int a,int num)
{
    int mid,s,e;
    s=0;
    e=a;
    mid=(s+e)/2;
    while(s<=e)
    {
        if(arr[mid]==num)
        {
            return mid;
        }
        else if(num>arr[mid])
        {
            s=mid+1;
        }
        else
        {
            e=mid-1;
        }
        mid=(s+e)/2;
    }

}
